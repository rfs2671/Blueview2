{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "cd backend && uvicorn server:app --host 0.0.0.0 --port $PORT"
      }
    },
    "frontend": {
      "build": {
        "builder": "NIXPACKS"
      },
      "rootDirectory": "frontend",
      "deploy": {
        "startCommand": "npm install && expo export --platform web && npx serve dist -l $PORT"
      }
    }
  }
}
