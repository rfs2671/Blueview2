{
  "expo": {
    "name": "Blueview Passport",
    "slug": "blueview-passport",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "blueview",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.blueview.passport",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan OSHA cards and take photos",
        "NSLocationWhenInUseUsageDescription": "Verify your location at job sites",
        "NFCReaderUsageDescription": "Check in at job sites via NFC tags"
      }
    },
    "android": {
      "package": "com.blueview.passport",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#0A1929"
      },
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      "expo-web-browser"
      "react-native-nfc-manager",
      "expo-camera",
      "expo-location"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "blueview-passport"
      }
    }
  }
}
