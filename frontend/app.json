{
  "expo": {
    "name": "Blueview",
    "slug": "blueview",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "blueview",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.blueview.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan QR codes and take photos",
        "NSLocationWhenInUseUsageDescription": "Verify your location at job sites",
        "NFCReaderUsageDescription": "Check in at job sites via NFC tags"
      }
    },
    "android": {
      "package": "com.blueview.app",
      "adaptiveIcon": {
        "backgroundColor": "#0A1929"
      },
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Check in at construction sites via NFC"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "blueview-construction"
      },
      "EXPO_PUBLIC_BACKEND_URL": ""
    }
  }
}
